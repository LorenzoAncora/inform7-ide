<style-scheme id="plain" _name="Plain" 
version="1.0">
    <author>P. F. Chimento</author>
    <_description>Just plain text, no styling</_description>

    <!-- GtkSourceView appearance styles-->
    <style name="text"              />
    <style name="bracket-match"     bold="true"/>
    <style name="bracket-mismatch"  bold="true"/>
    
    <!-- Search Matching (not used) -->
    <style name="search-match"      />  

    <!-- Others -->
    <style name="def:error"           bold="true"/>
    <style name="def:note"            bold="true"/>
    <style name="def:underlined"      italic="true" underline="true"/>

</style-scheme>
